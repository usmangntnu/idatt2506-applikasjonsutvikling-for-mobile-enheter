<?xml version="1.0" encoding="utf-8"?>
<!--
  Hovedlayout. LinearLayout så vi enkelt kan bytte mellom vertical/horizontal i kode.
  Vi bruker FragmentContainerView for å vise fragmentene.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/detail_container"
        android:name="com.example.oving4.ItemDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:ignore="FragmentTagUsage" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/list_container"
        android:name="com.example.oving4.ItemListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:ignore="FragmentTagUsage" />

</LinearLayout>